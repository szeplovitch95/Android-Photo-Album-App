<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tags_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.shacharchrisphotoalbum.photoalbumandroid04.TagsManager"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/my_toolbar"
        android:layout_weight="0.07"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07">

        <Button
            android:text="Slideshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slideshowBtn"
            android:layout_weight="1" />

        <Button
            android:text="Move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moveBtn"
            android:layout_weight="1" />

        <Button
            android:text="Remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeBtn"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/sample_0"
        android:id="@+id/singleImageVIew"
        android:layout_weight="0.90" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Tags Manager:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic" />

        <Button
            android:text="Edit"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTagBtn" />

        <Button
            android:text="Remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagRemoveBtn" />

        <Button
            android:text="Add"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:id="@+id/addTagBtn"
            android:elevation="8dp" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:id="@+id/tagsListVIew" />


</LinearLayout>
